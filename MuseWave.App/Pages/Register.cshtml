@page
@model MuseWave.App.Pages.RegisterModel


<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<div class="containter border" style="padding:20px">
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success">
                @Model.SuccessMessage
            </div>
        }
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="RegisterC.Username"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="RegisterC.Username" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="RegisterC.Username"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="RegisterC.Name"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="RegisterC.Name" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="RegisterC.Name"></span>
        </div>
        <div class="form-group row">
                            <div class="col-3">
                                <label asp-for="RegisterC.Email"></label>
                            </div>
                            <div class="col-5">
                                <input type="text" asp-for="RegisterC.Email" class="form-control"/>
                            </div>
                            <span class="text-danger" asp-validation-for="RegisterC.Email"></span>
                            </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="RegisterC.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="RegisterC.Password" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="RegisterC.Password"></span>

        </div>
        <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="RegisterC.ConfirmPassword">Confirm Password</label>
                    </div>
                    <div class="col-5">
                        <input type="password" asp-for="RegisterC.ConfirmPassword" class="form-control"/>
                    </div>
        <span class="text-danger" asp-validation-for="RegisterC.ConfirmPassword"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <button type="submit" class="btn btn-primary">Create Account</button>
            </div>
        </div>
    </form>
</div>
</body>
</html>